@model IEnumerable<Domain.Article>
<h2 >@ViewBag.Title</h2>
@Scripts.Render("~/Scripts/jquery-1.8.2.min.js")
@Scripts.Render("~/Scripts/Ticket.js")
@if (string.Compare(@ViewBag.Message, string.Empty) != 0)
{
    <input type="hidden" value="@ViewBag.CORSTicket" />
    <table style="width:100%">
        <tr style="width:100%">
            @foreach (var item in Model)
            {
                <td>
                    <div>
                    <span id="spnDescription_@Html.DisplayFor(modelItem => item.Id)">@Html.DisplayFor(modelItem => item.Description)</span></div>
                    <div>
                    <span id="spnPrice_@Html.DisplayFor(modelItem => item.Id)">@Html.DisplayFor(modelItem => item.Price)</span></div>
                    <div>
                        @Html.TextBox(string.Concat("txt_", @Html.DisplayFor(modelItem => item.Id)), "0", new { @type = "number", style = "width: 100px;"})
                        <input type="button" id="btn_@Html.DisplayFor(modelItem => item.Id)" value="Comprar" />
                    </div>
                </td>
            }
        </tr>
        <tr>
            <table id="tableList" style="width:100%">
                <colgroup>
                    <col style="width:5%" />
                    <col style="width:20%" />
                    <col style="width:15%" />
                    <col style="width:15%" />
                    <col style="width:15%" />
                </colgroup>
                <tr>
                    <td><strong>Item</strong></td>
                    <td><strong>Descripcion</strong></td>
                    <td><strong>Precio Unitario</strong></td>
                    <td><strong>Cantidad</strong></td>
                    <td><strong>Total</strong></td>
                </tr>
                <tfoot>
                    <tr>
                        <td colspan="4" style="text-align:right">Total Ticket:</td>
                        <td><strong id="spn_TotalTicket">0.00</strong></td>
                    </tr>
                    <tr>
                        <td colspan="5" style="text-align:right"><input type="submit" value="Vender Ticket" /></td>
                    </tr>
                </tfoot>
            </table>
        </tr>
    </table>
}